---
export interface props{
    img:string
    title: string
    languageUno:string
    languageDos:string
    languageTres:string
    description:string
    vercel:string
    github:string

}

const {img, title, languageUno, languageDos ,languageTres, description, vercel, github } =Astro.props

---

<div class="w-60 h-96 rounded-2xl font-medium overflow-hidden mb-24">
  <figure>
    <img
      class="max-w-60"
      src={img}
      alt="imagen del proyecto"
    />
  </figure>
  <div class="bg-white p-2">
    <h1 class="text-2xl text-black mb-2">{title}</h1>
    <h2 class="text-xl font-semibold mb-2">
      <span class="text-cyan-500">{languageUno}</span>
      <span class="text-sky-800">{languageDos}</span>
      <span class="text-purple-700">{languageTres}</span>
    </h2>
    <p class="text-slate-600 mb-2">{description}
    </p>
    <a href={vercel} class="bg-stone-950">vercel</a>
    <a href={github} class="bg-stone-950">github</a>
  </div>
</div>

