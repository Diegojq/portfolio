---
interface Props {
    className?:string
    href:string
}
const {className ,href} = Astro.props
---
<a class=`  ${className} rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition`  {...Astro.props}
href={href}
target="_blank"
rel="noopener noreferrer"
>
    <slot/>
</a>        